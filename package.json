{
  "name": "distillama",
  "version": "0.0.1",
  "description": "Chrome Extension to Summarize Web Pages Using LLMs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shreyaskarnik/DistiLlama.git"
  },
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.mjs",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "pnpm build:hmr && (run-p wss build:watch)",
    "dev:firefox": "pnpm build:hmr && (run-p wss build:firefox:watch)",
    "test": "jest --passWithNoTests",
    "commitlint": "commitlint --edit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "pnpm lint -- --fix",
    "prettier": "prettier . --write"
  },
  "type": "module",
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mozilla/readability": "^0.5.0",
    "@mui/material": "^5.15.2",
    "@xenova/transformers": "^2.14.2",
    "construct-style-sheets-polyfill": "^3.1.0",
    "langchain": "^0.0.209",
    "moment": "^2.30.1",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^4.0.379",
    "prop-types": "^15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^5.0.1",
    "react-markdown": "^9.0.1",
    "react-toastify": "^10.0.4",
    "styled-components": "^6.1.8",
    "voy-search": "^0.6.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/react": "14.1.2",
    "@twind/core": "^1.1.3",
    "@twind/preset-autoprefix": "^1.0.7",
    "@twind/preset-tailwind": "^1.1.4",
    "@types/chrome": "0.0.260",
    "@types/jest": "29.5.11",
    "@types/node": "20.10.7",
    "@types/react": "18.2.42",
    "@types/react-dom": "18.2.18",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitejs/plugin-react": "4.2.1",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "11.2.0",
    "husky": "^9.0.7",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.5.0",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "rollup": "4.9.4",
    "sass": "1.69.5",
    "ts-jest": "29.1.2",
    "ts-loader": "9.5.1",
    "tslib": "^2.6.2",
    "typescript": "5.3.3",
    "vite": "5.0.10",
    "vite-plugin-top-level-await": "^1.4.1",
    "vite-plugin-wasm": "^3.3.0",
    "ws": "8.16.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@8.9.2"
}
